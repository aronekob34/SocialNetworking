<!-- page start-->
<div class="row">
  <div class="col-sm-12 col-lg-12">
      <section class="panel">
          <header class="panel-heading">
              Locations
          </header>
          <table class="table">
              <thead>
              <tr class="row">
                  <th>Country/Nation</th>
                  <th>State/Region</th>
                  <th class="hidden-xs">Address</th>
                  <th class="hidden-sm hidden-xs Checkbox">Single Room</th>
                  <th class="hidden-sm hidden-xs Checkbox">Surfspot</th>
                  <th class="hidden-sm hidden-xs Checkbox">Barbecue</th>
                  <th class="hidden-sm hidden-xs Checkbox">Villa</th>
                  <th class="hidden-sm hidden-xs Checkbox">Swimmingpool</th>
                  <th class="hidden-sm hidden-xs Checkbox">Skiresort</th>
                  <th class="options">Options</th>
              </tr>
              </thead>
              <tbody>
              <% @locations.each do |location| %>
              <tr class="row">
                  <td class=""><%= location.country_name %></td>
                  <td class=""><%= location.state %></td>
                  <td class="hidden-xs"><%= location.location %></td>                  
                  <td class="hidden-sm hidden-xs Checkbox">
                      <% if location.singleroom %>
                        <i class="fa fa-check-square-o" aria-hidden="true"></i>
                      <% else %>
                        <i class="fa fa-square-o" aria-hidden="true"></i>
                      <% end %>
                  </td>                    
                  <td class="hidden-sm hidden-xs Checkbox">
                      <% if location.surfspot %>
                        <i class="fa fa-check-square-o" aria-hidden="true"></i>
                      <% else %>
                        <i class="fa fa-square-o" aria-hidden="true"></i>
                      <% end %>
                  </td>                    
                  <td class="hidden-sm hidden-xs Checkbox">
                      <% if location.barbecue %>
                        <i class="fa fa-check-square-o" aria-hidden="true"></i>
                      <% else %>
                        <i class="fa fa-square-o" aria-hidden="true"></i>
                      <% end %>
                  </td>  
                  <td class="hidden-sm hidden-xs Checkbox">
                      <% if location.villa %>
                        <i class="fa fa-check-square-o" aria-hidden="true"></i>
                      <% else %>
                        <i class="fa fa-square-o" aria-hidden="true"></i>
                      <% end %>
                  </td>                    <td class="hidden-sm hidden-xs Checkbox">
                      <% if location.swimmingpool %>
                        <i class="fa fa-check-square-o" aria-hidden="true"></i>
                      <% else %>
                        <i class="fa fa-square-o" aria-hidden="true"></i>
                      <% end %>
                  </td>                                                                          
                  <td class="hidden-sm hidden-xs Checkbox">
                      <% if location.skiresort %>
                        <i class="fa fa-check-square-o" aria-hidden="true"></i>
                      <% else %>
                        <i class="fa fa-square-o" aria-hidden="true"></i>
                      <% end %>
                      <%# binding.pry %>
                  </td>
                  <td class="options col-md-3">
                    <div class="btn-group">
                     <%= link_to location_path(location.id), class: "btn btn-primary" do %><i class="fa fa-arrow-right" aria-hidden="true"></i><% end %>
                     <%= link_to edit_location_path(location.id), class: "btn btn-success" do %><i class="fa fa-pencil" aria-hidden="true"></i><% end %><%= link_to delete_location_path(location.id), class: "btn btn-danger" do %><i class="fa fa-trash-o" aria-hidden="true"></i><% end %>
                    </div>
                  </td>
              </tr>
              <% end %>
              </tbody>
          </table>
      </section>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
      <section class="panel">
          <header class="panel-heading">
              Projects
          </header>
          <table class="table">
              <thead>
              <tr class="row">
                  <th class="col-md-4">Project Name</th>
                  <th class="Fieldnumber hidden-xs">% Completion</th>
                  <th class="Fieldnumber hidden-xs">Budget</th>
                  <th class="Fieldnumber hidden-sm hidden-xs">Number of Employees</th>
                  <th class="Fieldnumber hidden-sm hidden-xs">Number of Investors</th>
                  <th class="Checkbox">Hiring</th>
                  <th class="options">Options</th>
              </tr>
              </thead>
              <tbody>
              <% @projects.each do |project| %>
              <tr class="row">
                  <td class="col-md-4"><%= project.name %></td>
                  <td class="col-md-1 Fieldnumber hidden-xs"><%= project.percentage_completion %></td>
                  <td class="col-md-1 Fieldnumber hidden-xs"><%= project.budget %></td>
                  <td class="col-md-1 Fieldnumber hidden-sm hidden-xs"><%= project.nemployees %></td>
                  <td class="col-md-1 Fieldnumber hidden-sm hidden-xs"><%= project.ninvestors %></td>
                  <td class="col-md-1 Checkbox">
                  	  <% if project.hiring %>
                  	  	<i class="fa fa-check-square-o" aria-hidden="true"></i>
                  	  <% else %>
                        <i class="fa fa-square-o" aria-hidden="true"></i>
                      <% end %>
                  </td>
                  <td class="options col-md-3">
                    <div class="btn-group">
                    <%= link_to project_path(project.id), class: "btn btn-primary" do %><i class="fa fa-arrow-right" aria-hidden="true"></i><% end %>
                    <%= link_to edit_project_path(project.id), class: "btn btn-success" do %><i class="fa fa-pencil" aria-hidden="true"></i><% end %><%= link_to delete_project_path(project.id), class: "btn btn-danger" do %><i class="fa fa-trash-o" aria-hidden="true"></i><% end %>
                    </div>
                  </td>                  
              </tr>
              <% end %>
              </tbody>
          </table>
      </section>
  </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
        <div class="form-group ">
          <div class="panel-body">
            <div class="form">        
              <div class="col-lg-10-lg-offset-2 col-lg-10">
                  <%#= f.submit "Save", :class => "btn btn-primary wideButton"%>
                  <%= link_to "Go Back", hosts_path, :method => :get, :class => "btn btn-default wideButton" %>
                  <%= link_to "New Location", new_location_path, :method => :get, :class => "btn btn-success wideButton" %>
                  <%= link_to "New Project", new_project_path, :method => :get, :class => "btn btn-warning wideButton" %>
              </div>
            </div>
          </div>            
        </div> 
        </section>   
    </div>
</div>