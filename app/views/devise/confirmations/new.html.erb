<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
               <h2>Resend confirmation instructions</h2>
            </header>
            <div class="panel-body">
	            <div class="form">
	                <%= render 'partials/error_messages', object: resource %>
					<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "form-validate form-horizontal", multipart: true }) do |f| %>
					<%= devise_error_messages! %>
						<div class="form-group ">
						  <%= f.label :email, "Email", :class => "control-label col-lg-2" %>
							<div class="col-lg-10">
							  <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control", id: "email" %>
							</div>
					  	</div>
						<div class="form-group ">
						  <div class="col-lg-10-lg-offset-2 col-lg-10">
						      <%= f.submit "Submit", :class => "btn btn-primary wideButton" %>
						      <%#= link_to "Cancel", destroy_account_session_path, method: :delete, :class => "btn btn-default wideButton" %>
						      <%= link_to "Cancel", root_path, :method => :get, :class => "btn btn-default wideButton" %>
							<div class="links ">
							<%= render "devise/shared/links2" %>
							</div>						      
						  </div>
						</div>

					    <%#= f.label :email %>
					    <%#= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>

					    <%#= f.submit "Resend confirmation instructions" %>
					<% end %>
				</div>
			</div>
        </section>
    </div>
</div>

