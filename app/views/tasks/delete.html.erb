<div class="alert alert-warning fade in">
  <button data-dismiss="alert" class="close close-sm" type="button">
      <i class="icon-remove"></i>
  </button>
  <strong>Warning!</strong> Are you sure you want to delete the following Task?
</div>   

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
               <h2>Task Delete</h2>
            </header>
            <div class="panel-body">
            <%= link_to "Delete", {:action => "destroy"}, :method => :delete, :class => "btn btn-default wideButton" %>
            <%= link_to "Cancel", project_path(@task.project_id), :method => :get, :class => "btn btn-default wideButton" %>
            </div>
        </section>   
    </div>
</div>
