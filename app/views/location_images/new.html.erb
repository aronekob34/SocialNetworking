<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
            	<h2>New Location Image</h2>
            </header>
            <div class="panel-body">
              <div class="form">
                <%= form_for(@location_image, html: {class: "form-validate form-horizontal"}) do |f| %>
                  <%= render 'partials/error_messages', object: @location_image %>                
                  <div class="form-group ">
                  	  <%= f.label :houseimages, "Image", :class => "control-label col-lg-2" %>
                    <div class="col-lg-10">
                      <%= f.file_field :houseimages %>
                    </div>
                  </div> 
                  <div class="form-group ">
	                  <div class="col-lg-10-lg-offset-2 col-lg-10">
	                      <%= f.submit "Submit", :class => "btn btn-primary wideButton"%>
	                      <%= link_to "Back", location_path(@location_image.location_id), :method => :get, :class => "btn btn-default wideButton" %>
	                  </div>
                  </div>                                    
                <% end %> 
              </div>
            </div>
        </section>   
    </div>
</div>

<%= link_to 'Back', location_images_path %>
