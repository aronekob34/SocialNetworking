<p id="notice"><%= notice %></p>

<h1>Location Images</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Houseimages</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @location_images.each do |location_image| %>
      <tr>
        <td><%= location_image.location_id %></td>
        <td><%= location_image.houseimages %></td>
        <td><%= link_to 'Show', location_image %></td>
        <td><%= link_to 'Edit', edit_location_image_path(location_image) %></td>
        <td><%= link_to 'Destroy', location_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

